@page
@model Presentacion.Pages.Servicio.EliminarModel
@{ViewData["Title"]="Eliminar Servicio";
}

<h1>Eliminar Servicio</h1>
<h4 class="text-danger">@ViewData["Error"]</h4>
<h4 class="text-danger">@ViewData["Mensaje"]</h4>

<div class="form-horizontal">
        
        <hr />
        
        <div class="row">
           <div class="col-md-4">
               <form method="post">
                   
                   <input type="hidden" asp-for="Servicio.Id" />
                   <div class="form-group">
                       <label asp-for="Servicio.Nombre" class="control-label"> </label>
                       <input asp-for="Servicio.Nombre"  class="form-control"/>
                       
                     
                   </div>
                   <div class="form-group">                       
                       <input type="submit" value="Eliminar" class="btn btn-primary"/>                       
                   </div>
               </form>
           </div>
        </div>

        <div>
            <a asp-page="Index">Regresar a Servicios</a>
        </div> 
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


